
default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    gradle(task: "clean assembleRelease")
    crashlytics
  
    # sh "your_script.sh"
    # You can also use other beta testing services here
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    version_code = Time.now.to_i # → ví dụ: 1721859558
    version_name = "1_dev_#{version_code}"

    gradle(
        task: "clean bundleRelease",
        properties: {
          "VERSION_CODE" => version_code,
          "VERSION_NAME" => version_name
        }
    )
    # build_info_path = File.expand_path("../build_info.env", __dir__)
    build_info_path = File.expand_path("../../build_info.env", __dir__)
    File.write(build_info_path, <<~ENV)
      VERSION_CODE=#{version_code}
      VERSION_NAME=#{version_name}
    ENV
  # Đẩy lên Google Play
    upload_to_play_store(
      track: "internal",
      json_key: "./playstore_credentials.json",
      package_name: "com.haonguyen.mynewapp",
      release_status: "draft"
    )
    build_info_ts_path = File.expand_path("../../src/build_info.ts", __dir__)
    File.write(build_info_ts_path, <<~TS)
      // ⚠️ This file is auto-generated by Fastlane. Do not edit manually.
      export const VERSION_CODE = #{version_code};
    TS
  end

end
